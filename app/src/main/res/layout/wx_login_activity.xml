<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/back_title"
        android:id="@+id/title"></include>

    <RelativeLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/l_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp">

            <EditText
                android:id="@+id/phone_l"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_shape"
                android:drawableLeft="@mipmap/user"
                android:drawablePadding="12dp"
                android:hint="请输入您的手机号"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textColorHint="@color/themeColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l_p"
            android:layout_marginTop="21dp">

            <EditText
                android:id="@+id/code_l"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_shape"
                android:drawableLeft="@mipmap/code"
                android:drawablePadding="12dp"
                android:hint="请输入验证码"
                android:paddingLeft="16dp"
                android:textColorHint="@color/themeColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/send_code"
            android:layout_width="83dp"
            android:layout_height="44dp"
            android:layout_below="@+id/l_p"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/code_shape"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="12sp">

        </Button>

        <RelativeLayout
            android:id="@+id/l_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l_c"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="81dp"
                android:layout_marginRight="81dp"
                android:background="@drawable/button_shape"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

    </RelativeLayout>
    <EditText
        android:id="@+id/hidden_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"></EditText>
</RelativeLayout>