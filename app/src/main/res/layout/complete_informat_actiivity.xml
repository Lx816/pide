<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeColor"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="完善资料"
                android:textColor="@color/white"
                android:textSize="18sp"></TextView>

                <ImageView
                    android:id="@+id/skip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_width="52dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/skip"></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp">

            <RelativeLayout
                android:id="@+id/take_photo"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/photo_b">

                <www.pide.com.ui.view.XCRoundImageView
                    android:id="@+id/avatar_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/photo"></www.pide.com.ui.view.XCRoundImageView>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/take_photo"
                android:layout_centerInParent="true"
                android:paddingTop="4dp"
                android:text="上传头像"
                android:textColor="@color/white"
                android:textSize="14sp"></TextView>
        </RelativeLayout>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_shape"
            android:hint="姓名"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColorHint="@color/themeColor"
            android:textColor="@color/themeColor"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp">

            <EditText
                android:id="@+id/profession"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/edit_shape"
                android:hint="行业"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textColorHint="@color/themeColor"
                android:textColor="@color/themeColor"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/down">

            </ImageView>
        </RelativeLayout>

        <EditText
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_shape"
            android:hint="公司名称"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColorHint="@color/themeColor"
            android:textColor="@color/themeColor"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/need_resources"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_shape"
            android:hint="需要资源"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColorHint="@color/themeColor"
            android:textColor="@color/themeColor"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/possession_resources"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_shape"
            android:hint="拥有资源"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColorHint="@color/themeColor"
            android:textColor="@color/themeColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="128dp"
            android:background="@drawable/white_button_shape"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:text="完成">

        </Button>
    </LinearLayout>
</RelativeLayout>