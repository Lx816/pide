<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/ll_image">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:layout_width="33dp"
            android:layout_height="17dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_back"/>
        </RelativeLayout>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑个人信息"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/save_top"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE"></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/item_selector"
            android:clickable="true">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="16sp"
                android:textColor="#9B9B9B"/>
            <www.pide.com.ui.view.XCRoundImageView
                android:id="@+id/up_img"
                android:layout_centerVertical="true"
                android:layout_marginRight="34dp"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/photo"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:src="@mipmap/right"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textColor="#9B9B9B"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/name"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="必填"
                android:background="@null"
                android:text=""
                android:singleLine="true"
                android:textColorHint="#9B9B9B"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:focusable="true">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名称"
                android:textColor="#9B9B9B"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/company"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="必填"
                android:background="@null"
                android:textColorHint="#9B9B9B"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="16sp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r9"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:focusable="true">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位"
                android:textColor="#9B9B9B"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/position"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="选填"
                android:background="@null"
                android:textColorHint="#9B9B9B"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="16sp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r4"
            android:layout_below="@+id/r9"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/item_selector"
            android:clickable="true">
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属行业"
                android:textColor="#9B9B9B"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/t_profession"
                android:layout_marginRight="29dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="必填"
                android:textColorHint="#9B9B9B"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r5"
            android:layout_below="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/item_selector"
            android:clickable="true">
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拥有资源"
                android:textColor="#9B9B9B"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/possession_resources"
                android:layout_marginRight="29dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="必填"
                android:textColorHint="#9B9B9B"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxEms="5"
                android:singleLine="true"
                android:ellipsize="end"/>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r6"
            android:layout_below="@+id/r5"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/item_selector"
            android:clickable="true">
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要资源"
                android:textColor="#9B9B9B"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/need_resources"
                android:layout_marginRight="29dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="必填"
                android:textColorHint="#9B9B9B"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxEms="5"
                android:singleLine="true"
                android:ellipsize="end"/>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r7"
            android:layout_below="@+id/r6"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/item_selector"
            android:clickable="true">
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自我介绍"
                android:textColor="#9B9B9B"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/introduce"
                android:layout_marginRight="29dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:textColorHint="#9B9B9B"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxEms="5"
                android:singleLine="true"
                android:ellipsize="end"/>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r8"
            android:layout_below="@+id/r7"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/item_selector"
            android:clickable="true">
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地址"
                android:textColor="#9B9B9B"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/address"
                android:layout_marginRight="29dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:textColorHint="#9B9B9B"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r_phone"
            android:layout_below="@+id/r8"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/item_selector"
            android:clickable="true">
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#9B9B9B"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/phone"
                android:layout_marginRight="29dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"/>

        </RelativeLayout>
        <Button
            android:id="@+id/save"
            android:layout_below="@+id/r_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_shape"
            android:layout_marginTop="59dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="保存"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>