<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="-31dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="210"
            android:background="@mipmap/login_b_d">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/login_b"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="登录注册"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/look"
                    android:layout_width="52dp"
                    android:layout_height="18dp"
                    android:layout_alignTop="@+id/textView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/look"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="-31dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="51"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/login_l_shape">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/login_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/login_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录"
                        android:textColor="@color/themeColor"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/login_l"
                        android:layout_width="16dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/login_t"
                        android:layout_centerInParent="true"
                        android:background="@color/themeColor">

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rigister_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/login_r"
                    android:layout_marginLeft="12.5pt"
                    android:layout_toEndOf="@+id/login_r"
                    android:layout_toRightOf="@+id/login_r">

                    <TextView
                        android:id="@+id/register_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册"
                        android:textColor="@color/themeColor"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/register_l"
                        android:layout_width="16dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/register_t"
                        android:layout_centerInParent="true"
                        android:background="@color/themeColor"
                        android:visibility="invisible">

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="459"
            android:background="@drawable/background_shape"
            android:orientation="vertical">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/wCordFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>
        </LinearLayout>
    </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="更多登录方式"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/wx_login"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/m"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/wx" />
        </RelativeLayout>
</RelativeLayout>
