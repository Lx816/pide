<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ll_item"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:background="#F4F4F4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="@mipmap/my_card_b">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <www.pide.com.ui.view.XCRoundImageView
                android:id="@+id/user_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/meeting_no_p">

            </www.pide.com.ui.view.XCRoundImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_img"
                android:paddingLeft="6dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="14sp"></TextView>
                <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="10sp"></TextView>
                    <TextView
                        android:id="@+id/position"
                        android:layout_toRightOf="@+id/company"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="10sp"></TextView>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属行业："
                android:textSize="12sp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/professions"
                android:layout_toRightOf="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拥有资源："
                android:textSize="12sp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/possession_resources"
                android:layout_toRightOf="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要资源："
                android:textSize="12sp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/need_resources"
                android:layout_toRightOf="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地址："
                android:textSize="12sp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/address"
                android:layout_toRightOf="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/r5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:textSize="12sp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/phone"
                android:layout_toRightOf="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"></TextView>
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>