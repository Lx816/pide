<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/logo" />
        <RelativeLayout
            android:id="@+id/set_btn1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/logo_image"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:onClick="personalSetting"
                android:text="多人会议"
                android:textColor="#333333"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:focusableInTouchMode="true"
        android:layout_weight="1" >
        <RelativeLayout
            android:id="@+id/rl_roomname"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:focusable="true"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp">
            <EditText
                android:id="@+id/roomname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/edit1_shape"
                android:hint="请输入房间名"
                android:inputType="text|textMultiLine"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:textSize="18sp"
                android:maxLength="18"
                android:imeOptions="actionDone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_roompassword"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@id/rl_roomname"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:focusableInTouchMode="true"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/edit1_shape"
                android:hint="请输入房间密码"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:textSize="18sp"
                android:maxLength="18"
                android:imeOptions="actionDone"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_roompassword"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_anchor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:onClick="addconference_anchor"
                android:layout_gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="以主播身份进入"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_audience"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:onClick="addconference_audience"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="以观众身份进入"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <Button
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="personalSetting"
            android:text="设置"
            android:textColor="#00AFEF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/versionName_view"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="V1.2.0"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>