<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="211dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/dialog_b"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="34dp"
                android:text=""
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="#FF2D2D"
                android:textSize="16sp"></TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/qx"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:textColor="#666666"
                        android:text="取消"
                        android:textSize="14sp"
                        android:background="@drawable/button_m1_shape"></Button>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/qd"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:textColor="@color/white"
                        android:text="确认"
                        android:textSize="14sp"
                        android:background="@drawable/button_m2_shape"></Button>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-158dp">

            <www.pide.com.ui.view.XCRoundImageView
                android:id="@+id/avatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/meeting_no_p" />

            <ImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:background="@drawable/img_y" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>